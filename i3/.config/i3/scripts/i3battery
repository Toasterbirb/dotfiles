#!/bin/bash
case $BLOCK_BUTTON in
	1) ~/.config/i3/scripts/i3battery_click ;;
esac

BAT=$(acpi -b | grep -E -o '[0-9][0-9][0-9]?%')

# Full and short texts
echo "ï‰€ $BAT"
#echo "BAT: $BAT"

# Set urgent flag below 5% or use orange below 20%
[ ${BAT%?} -le 5 ] && exit 33
[ ${BAT%?} -le 20 ] && echo "#FF8000"

exit 0
