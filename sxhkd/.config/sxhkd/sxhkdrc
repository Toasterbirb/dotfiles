# terminal emulator
#super + Return
#	termite

# floating file browser
super + m
	termite -t "File-Browser" -e lf

# program launcher
super + shift + d
	[ "$(pgrep dmenu)" ] || j4-dmenu-desktop

# bookmark manager
super + b
	/home/toasterbirb/Scripts/bookmarks/bookmarks

# screenshot
Print
	flameshot gui

### Program shortcuts ###
# Firefox
#super + shift + Return
#	firefox

# discord
#super + ctrl + d
#	~/Lataukset/DiscordPTB/DiscordPTB

# Surf
super + ctrl + s
	tabbed surf -e

# Pavucontrol
super + ctrl + p
	pavucontrol

# Nvidia settings
super + ctrl + n
	nvidia-settings

# Signal
super + ctrl + shift + s
	signal-desktop
#########################

# ibus-selecter menu (keyboard layout selector)
super + shift + p
	~/Scripts/ibus-selector.sh

# ibus-selecter (change to next layout)
super + p
	~/Scripts/ibus-selector.sh next

# rofi translator
super + shift + u
	~/Scripts/translator

# rofi window switcher
super + shift + Tab
	rofi -show window -lines 5 -columns 2

# emoji picker
super + u
	~/Scripts/emoji-picker

# rofi calculator
super + c
	rofi -show calc -modi calc -no-show-match -width 500 -no-sort -lines 5

# invidious script
super + i
	sh /home/toasterbirb/Projects/Git/rofi-tube/invidious.sh

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# hardware keybinds
#

# screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 20

# screen brightness controls
XF86MonBrightnessDown
	xbacklight -dec 20

# media controls
XF86AudioPlay
	playerctl play-pause

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

# Volume controls
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +10%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -10%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

